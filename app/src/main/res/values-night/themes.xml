<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TokoLaptop" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/grey</item>
        <item name="colorPrimaryVariant">@color/grey_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/navy</item>
        <item name="colorSecondaryVariant">@color/navy_light</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <style name="TextContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextContent.Headline1">
        <item name="android:textAppearance">@style/TextAppearance.Material3.HeadlineLarge</item>
    </style>

    <style name="TextContent.AppBar">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
    </style>

    <style name="TextContent.ProductTitle">
        <item name="android:textSize">15sp</item>
        <item name="fontFamily" >@font/lato_bold</item>
        <item name="android:textAppearance">?attr/textAppearanceSubtitle1</item>
    </style>

    <style name="TextContent.ProductTitle.Detail">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextContent.ProductPrice">
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/sage_light</item>
        <item name="android:textAppearance">?attr/textAppearanceSubtitle2</item>
    </style>

    <style name="TextContent.ProductPrice.Detail">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextContent.BodySmall">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/lato</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextContent.BodySmall.Light">
        <item name="fontFamily">@font/lato_light</item>
    </style>

    <style name="TextContent.BodySmall.Bold">
        <item name="fontFamily">@font/lato_bold</item>
    </style>

    <!-- Button -->
    <style name="Widget.TokoLaptop.Button" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/orange_light</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/lato_bold</item>
    </style>

    <!-- AppBar -->
    <style name="Widget.TokoLaptop.TextAppBar" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!--Splash Theme-->
    <style name="SplashTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="colorPrimary">@color/sage</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorAccent</item>
    </style>
</resources>